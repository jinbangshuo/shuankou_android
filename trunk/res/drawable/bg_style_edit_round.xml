<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>

            <!-- 实心 -->
            <solid android:color="#FFFFFF" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/text_pressed" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10.0dip" android:left="10.0dip" android:right="10.0dip" android:top="10.0dip" />
        </shape></item>
    <item android:state_focused="true"><shape>

            <!-- 实心 -->
            <solid android:color="#FFFFFF" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/text_pressed" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10.0dip" android:left="10.0dip" android:right="10.0dip" android:top="10.0dip" />
        </shape></item>
    <item><shape>

            <!-- 实心 -->
            <solid android:color="#FFFFFF" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/text_normal" />
            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="10.0dip" android:left="10.0dip" android:right="10.0dip" android:top="10.0dip" />
        </shape></item>

</selector>